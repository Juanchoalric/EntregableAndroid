<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingLeft="8sp"
    android:paddingRight="8sp"
    android:paddingBottom="4sp"
    android:padding="4sp"
    android:layout_height="match_parent">

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:paddingBottom="60dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools">

        <TextView
            android:layout_toRightOf="@+id/image_product"
            android:id="@+id/title_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Camara Apple"
            />
        <TextView
            android:layout_toRightOf="@+id/delivery_product"
            android:id="@+id/price_product"
            android:layout_below="@+id/title_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="$1300" />

        <TextView
            android:layout_toRightOf="@+id/image_product"
            android:id="@+id/description_product"
            android:layout_below="@+id/delivery_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Es un producto super premium de ultima tecngologia recomiendo comprarlo ya!"
            />

        <ImageView
            android:id="@+id/image_product"
            android:layout_width="120sp"
            android:layout_height="120sp"
            tools:src="@drawable/computadora_asus"
            />

        <ImageView
            android:layout_below="@id/title_product"
            android:layout_toRightOf="@+id/image_product"
            android:id="@+id/delivery_product"
            android:layout_width="20sp"
            android:layout_height="20sp"
            tools:src="@drawable/ic_favorite_black_24dp"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>

</LinearLayout>